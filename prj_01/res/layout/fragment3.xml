<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/Del"
                android:onClick="onDelClick"
                android:background="#ffff0e1a"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/buttonC"
                android:onClick="onClickNum"
                android:nestedScrollingEnabled="true"
                android:background="#ffff0e1a"
                android:layout_alignTop="@+id/buttonOt" android:layout_toEndOf="@+id/buttonOt"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/buttonOt"
                android:onClick="onOtClick"
                android:background="#ffff0e1a"
                android:layout_above="@+id/Num1"
                android:layout_toEndOf="@+id/editText"/>

</LinearLayout>

